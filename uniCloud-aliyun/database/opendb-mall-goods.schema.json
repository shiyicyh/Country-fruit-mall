{
	"bsonType": "object",
	"permission": {
		"create": true,
		"delete": true,
		"read": true,
		"update": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成",
			"title": "商品编号"
		},
		"name": {
			"bsonType": "string",
			"description": "商品名称",
			"title": "名称",
			"trim": "both",
			"maxLength": 15
		},
		"remain_count": {
			"bsonType": "int",
			"description": "库存数量",
			"title": "库存数量",
			"defaultValue": 999
		},
		"goods_price": {
			"bsonType": "int",
			"description": "商品价格",
			"title": "价格"
		},
		"goods_desc": {
			"bsonType": "string",
			"description": "商品简短描述",
			"title": "商品简介",
			"trim": "both",
			"maxLength": 15
		},
		"standard": {
			"bsonType": "string",
			"description": "商品规格",
			"title": "商品规格",
			"trim": "both",
			"maxLength": 15
		},
		"category": {
			"bsonType": "string",
			"description": "",
			"title": "商品类别"
		},
		"goods_swiper_imgs": {
			"bsonType": "array",
			"description": "商品详情页的轮播图地址",
			"title": "详情轮播图"
		},
		"goods_introduce_imgs": {
			"bsonType": "array",
			"description": "商品详情页的介绍图地址",
			"title": "详情介绍图"
		},
		"goods_thumb": {
			"bsonType": "string",
			"description": "商品缩略图，用于在列表或搜索结果中预览显示",
			"pattern": "^(http:\/\/|https:\/\/|\/|.\/|@\/)\\S",
			"title": "缩略图地址"
		},
		"is_hot": {
			"bsonType": "bool",
			"description": "是否热销",
			"title": "是否热销"
		},
		"is_new": {
			"bsonType": "bool",
			"description": "是否新品",
			"title": "是否新品"
		},
		"is_on_sale": {
			"bsonType": "bool",
			"description": "是否上架销售",
			"title": "是否上架",
			"defaultValue": true
		},
		"tag": {
			"bsonType": "array",
			"description": "商品标签"
		},
		"comment_count": {
			"bsonType": "int",
			"description": "评论数",
			"title": "评论数",
			"defaultValue": 0
		},
		"total_sell_count": {
			"bsonType": "int",
			"description": "销量",
			"title": "销量",
			"defaultValue": 0
		},
		"add_date": {
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			},
			"description": "商品创建时间",
			"title": "创建时间"
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			},
			"description": "最后修改时间",
			"title": "最后修改时间"
		}
	},
	"required": ["name", "goods_price", "standard", "goods_thumb", "goods_introduce_imgs", "goods_swiper_imgs"]
}
